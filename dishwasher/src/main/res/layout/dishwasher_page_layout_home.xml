<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dishwasher_ic_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY">

    </ImageView>
    <include layout="@layout/dishwasher_view_layout_title"
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_main"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_270"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_24"
        android:textSize="@dimen/sp_40"
        android:textColor="@color/dishwasher_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_temp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_fun_hint"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_40"
        android:textColor="@color/dishwasher_white"
        app:layout_constraintLeft_toRightOf="@id/tv_time"
        app:layout_constraintRight_toLeftOf="@id/tv_temp_unit"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_fun_hint"/>
    <TextView
        android:id="@+id/tv_temp_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_24"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/dishwasher_white"
        app:layout_constraintLeft_toRightOf="@id/tv_temp"
        app:layout_constraintRight_toLeftOf="@id/tv_fun_hint"
        app:layout_constraintTop_toTopOf="@id/tv_temp"
        android:text="â„ƒ"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_fun_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_40"
        android:layout_marginBottom="@dimen/dp_24"
        android:textColor="@color/dishwasher_white"
        app:layout_constraintLeft_toRightOf="@id/tv_temp_unit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>