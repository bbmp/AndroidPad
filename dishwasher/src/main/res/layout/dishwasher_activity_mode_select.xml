<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dishwasher_ic_bg"
    tools:context=".ui.activity.ModeSelectActivity">
    <include
        android:id="@+id/ll_title"
        layout="@layout/dishwasher_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_60"
        android:textColor="@color/dishwasher_white"
        android:text="mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toTopOf="@id/ll_foot"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_100"
        android:textColor="@color/dishwasher_white"
        app:layout_constraintLeft_toRightOf="@id/tv_mode"
        app:layout_constraintRight_toLeftOf="@id/tv_temp"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toTopOf="@id/ll_foot"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_60"
        android:text="60"
        android:textColor="@color/dishwasher_white"
        app:layout_constraintLeft_toRightOf="@id/tv_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toTopOf="@id/ll_foot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â„ƒ"
        android:textColor="@color/dishwasher_white"
        android:textSize="@dimen/sp_30"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintLeft_toRightOf="@id/tv_temp"
        app:layout_constraintTop_toTopOf="@id/tv_temp"/>
    <View
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="#881E2229"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>
    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_34"
        android:layout_marginLeft="@dimen/dp_80"
        android:text="@string/dishwasher_start_hint"
        android:textColor="@color/dishwasher_white70"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot"/>
    <RadioGroup
        android:id="@+id/rg_aux"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp_38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_start"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot">
        <com.robam.common.ui.view.CancelRadioButton
            android:id="@+id/rb_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_44"
            android:textColor="@color/dishwasher_white"
            android:text="@string/dishwasher_pan_powfull"/>
        <com.robam.common.ui.view.CancelRadioButton
            android:id="@+id/rb_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/dishwasher_main_item_bg"
            android:textSize="@dimen/sp_44"
            android:textColor="@color/dishwasher_white"
            android:text="@string/dishwasher_kill_powfull"/>
        <com.robam.common.ui.view.CancelRadioButton
            android:id="@+id/rb_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/dishwasher_main_item_bg"
            android:textSize="@dimen/sp_44"
            android:textColor="@color/dishwasher_white"
            android:text="@string/dishwasher_flush"/>
        <com.robam.common.ui.view.CancelRadioButton
            android:id="@+id/rb_button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/dishwasher_main_item_bg"
            android:textSize="@dimen/sp_44"
            android:textColor="@color/dishwasher_white"
            android:text="@string/dishwasher_down_wash"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:layout_marginEnd="@dimen/dp_27"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/dishwasher_white"
        android:gravity="center"
        android:background="@drawable/dishwasher_shape_button_bg_ok"
        android:text="@string/dishwasher_start_working"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot"/>
</androidx.constraintlayout.widget.ConstraintLayout>