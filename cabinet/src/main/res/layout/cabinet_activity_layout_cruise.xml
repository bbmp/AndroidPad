<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cabinet_ic_bg"
    tools:context=".ui.activity.WorkActivity">

    <include
        android:id="@+id/ll_title"
        layout="@layout/cabinet_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_120"
        android:text="智能"
        android:textColor="@color/cabinet_mode70"
        android:textSize="@dimen/sp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="良好"
        android:textColor="@color/cabinet_white"
        android:textSize="@dimen/sp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cabinet_guideline"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_state_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前腔内状态"
        android:textColor="@color/cabinet_white"
        android:layout_marginTop="@dimen/dp_24"
        android:textSize="@dimen/sp_32"
        app:layout_constraintLeft_toLeftOf="@id/tv_state"
        app:layout_constraintTop_toBottomOf="@id/tv_state" />


    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_140"
        android:src="@drawable/cabinet_work_stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cabinet_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.57" />

</androidx.constraintlayout.widget.ConstraintLayout>