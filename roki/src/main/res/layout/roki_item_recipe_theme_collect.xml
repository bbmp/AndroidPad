<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/roki_shape_recipe_bg">

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/iv_item_topic_img"
        app:layout_constraintTop_toTopOf="@id/iv_item_topic_img"
        android:src="@mipmap/roki_tag_video"
        android:visibility="gone"/>

    <com.robam.common.view.RoundImageView
        android:id="@+id/iv_item_topic_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/roki_img_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:common_riv_left_top_corner_radius="@dimen/dp_10"
        app:common_riv_right_top_corner_radius="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginVertical="@dimen/dp_12"
        android:text="蜜汁烤鸡翅速度快过来看什么"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/roki_text_color_device_category"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_topic_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:singleLine="true"
        android:ellipsize="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>