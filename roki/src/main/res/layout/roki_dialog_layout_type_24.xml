<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        android:background="@drawable/roki_shape_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_dialog_content_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/roki_agree_privacy_policy_note"
            android:layout_margin="20dp"
            android:scrollbars="vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/roki_text_color_net_err"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/common_dialog_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:background="@drawable/roki_shape_button_left_selector"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/roki_text_color_online"
                android:gravity="center"
                android:text="退出应用" />

            <Button
                android:id="@+id/common_dialog_ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@drawable/roki_shape_button_right_selector"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意并继续"
                android:textColor="@color/roki_text_color_exit_login"
                android:textSize="@dimen/sp_20"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>