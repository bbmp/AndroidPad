<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="@dimen/dp_225"
    android:background="@drawable/roki_shape_kitchen_bg_round">

    <!--图片和图标-->
    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_158"
        android:scaleType="centerCrop"
        android:src="@mipmap/roki_img_default"
        app:common_riv_left_top_corner_radius="@dimen/dp_10"
        app:common_riv_right_top_corner_radius="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/home_recipe_tv_recipename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        app:layout_constraintBottom_toTopOf="@id/home_recipe_tv_collect2"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/roki_text_color_net_err"/>

    <TextView
        android:id="@+id/home_recipe_tv_collect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ffff3f3f"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_recipe_tv_recipename"
        app:layout_constraintBottom_toBottomOf="parent"/>



    <ImageView
        android:id="@+id/iv_collection"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/roki_recipe_favority_selector"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="@id/iv_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"/>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/roki_tag_video"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@id/iv_img"
        app:layout_constraintTop_toTopOf="@id/iv_img"/>
    <!--文字描述和收藏-->
    <TextView
        android:id="@+id/tv_device_name_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_13"
        android:text="device"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingRight="@dimen/dp_7"
        android:textColor="#ffffffff"
        android:visibility="visible"
        android:background="@drawable/roki_bg_recipe_device"
        app:layout_constraintLeft_toLeftOf="@id/iv_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"/>


    <TextView
        android:id="@+id/tv_device_name_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_13"
        android:text="device"
        android:textSize="@dimen/sp_10"
        android:paddingLeft="@dimen/dp_7"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:paddingRight="@dimen/dp_7"
        android:textColor="#ffffffff"
        android:visibility="visible"
        android:background="@drawable/roki_bg_recipe_device"
        app:layout_constraintLeft_toRightOf="@id/tv_device_name_one"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"/>


</androidx.constraintlayout.widget.ConstraintLayout>