<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"

    xmlns:tools="http://schemas.android.com/tools">

    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_theme_recipe_pic"
        android:layout_width="@dimen/dp_40"
        android:scaleType="centerCrop"
        android:src="@mipmap/roki_img_default"
        android:layout_height="@dimen/dp_40"
        android:layout_margin="@dimen/dp_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        app:common_riv_corner_radius="@dimen/dp_8"/>

    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_theme_recipe_pic2"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/roki_img_default"
        android:layout_height="@dimen/dp_132"
        android:layout_margin="@dimen/dp_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:srcCompat="@tools:sample/avatars"
        app:common_riv_corner_radius="@dimen/dp_8"/>
</androidx.constraintlayout.widget.ConstraintLayout>