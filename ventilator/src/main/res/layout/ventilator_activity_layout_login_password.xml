<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ventilator_ic_bg"
    tools:context=".ui.activity.LoginPasswordActivity">

    <include
        android:id="@+id/ll_title"
        layout="@layout/ventilator_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ventilator_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ventilator_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toTopOf="@id/tv_password"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        android:text="@string/ventilator_account"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.robam.common.ui.view.ClearEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLength="11"
        app:layout_constraintLeft_toLeftOf="@id/et_password"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_account"
        app:layout_constraintRight_toRightOf="@id/ventilator_guideline3"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white"
        android:textColorHint="@color/ventilator_white_20"
        android:hint="@string/ventilator_input_phone_hint" />
    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_54"
        app:layout_constraintTop_toBottomOf="@id/tv_account"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintBottom_toTopOf="@id/bt_login"
        android:text="@string/ventilator_password"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white"/>

    <com.robam.common.ui.view.PasswordEditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:singleLine="true"
        android:textSize="@dimen/sp_32"
        android:layout_marginLeft="@dimen/dp_32"
        android:textColor="@color/ventilator_white"
        android:hint="@string/ventilator_input_password_hint"
        android:textColorHint="@color/ventilator_white_20"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_password"
        app:layout_constraintLeft_toRightOf="@id/tv_password"
        app:layout_constraintRight_toRightOf="@id/ventilator_guideline3"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_47"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintRight_toRightOf="@id/ventilator_guideline3"
        app:layout_constraintBottom_toTopOf="@id/tv_login_qrcode"
        android:text="@string/ventilator_login"
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/ventilator_white"
        android:background="@drawable/ventilator_shape_button_ok_bg"/>

    <TextView
        android:id="@+id/tv_login_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/bt_login"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/ventilator_login"
        android:textSize="@dimen/sp_32"
        android:text="@string/ventilator_login_qrcode"/>

    <TextView
        android:id="@+id/tv_login_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="@id/ventilator_guideline3"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_login_qrcode"
        android:textColor="@color/ventilator_login"
        android:textSize="@dimen/sp_32"
        android:text="@string/ventilator_login_phone"/>

</androidx.constraintlayout.widget.ConstraintLayout>