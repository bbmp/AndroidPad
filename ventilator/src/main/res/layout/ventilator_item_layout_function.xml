<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.robam.common.ui.view.CircleImageView
        android:id="@+id/iv_fun"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fun"
        app:layout_constraintLeft_toLeftOf="@id/iv_fun"
        app:layout_constraintRight_toRightOf="@id/iv_fun"
        app:layout_constraintTop_toTopOf="@id/iv_fun"
        app:layout_constraintBottom_toBottomOf="@id/iv_fun"/>
</androidx.constraintlayout.widget.ConstraintLayout>