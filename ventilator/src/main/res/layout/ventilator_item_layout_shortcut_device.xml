<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/view_board"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_150"
        android:layout_marginHorizontal="@dimen/dp_5"
        android:background="@drawable/ventilator_shape_border_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/ventilator_white_50"
        app:layout_constraintLeft_toLeftOf="@id/view_board"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintBottom_toBottomOf="@id/view_board"
        tools:text="5068S"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ventilator_white"
        android:textSize="@dimen/sp_24"
        app:layout_constraintLeft_toLeftOf="@id/view_board"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintBottom_toTopOf="@id/tv_model"
        tools:text="name"/>

    <ImageView
        android:id="@+id/iv_device"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="@id/view_board"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintBottom_toTopOf="@id/tv_device_name"
        app:layout_constraintTop_toTopOf="@id/view_board"/>
</androidx.constraintlayout.widget.ConstraintLayout>