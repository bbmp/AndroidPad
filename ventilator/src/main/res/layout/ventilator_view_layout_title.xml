<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_24">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:visibility="gone"/>
        <View
            android:id="@+id/view_left"
            android:layout_width="@dimen/dp_6"
            android:layout_height="0dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_32"
            android:text="@string/ventilator_back"
            android:textColor="@color/ventilator_white"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_left_center"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:visibility="gone"/>
        <View
            android:id="@+id/view_left_center"
            android:layout_width="@dimen/dp_6"
            android:layout_height="0dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_left_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_32"
            android:text="@string/ventilator_back"
            android:textColor="@color/ventilator_white"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_32"
            android:text="time"
            android:textColor="@color/ventilator_white"
            android:visibility="gone"/>
        <View
            android:id="@+id/view_center"
            android:layout_width="@dimen/dp_6"
            android:layout_height="0dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_right_center"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:visibility="gone"/>
        <View
            android:id="@+id/view_right_center"
            android:layout_width="@dimen/dp_6"
            android:layout_height="0dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_right_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_32"
            android:text="@string/ventilator_back"
            android:textColor="@color/ventilator_white"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical|right">
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:visibility="gone"/>
        <View
            android:id="@+id/view_right"
            android:layout_width="@dimen/dp_6"
            android:layout_height="0dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_32"
            android:text="@string/ventilator_back"
            android:textColor="@color/ventilator_white"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>