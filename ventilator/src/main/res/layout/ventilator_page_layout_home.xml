<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.pages.HomePage"
    android:background="@mipmap/ventilator_ic_bg">
    <include layout="@layout/ventilator_view_layout_title"
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title"/>
    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ventilator_shape_button_unselected">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ventilator_performance"
            android:textSize="@dimen/sp_32"
            android:gravity="center"
            android:background="@drawable/ventilator_shape_button_selected"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/ventilator_comfort"
            android:textSize="@dimen/sp_32"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ventilator_air_speed"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white_50"
        app:layout_constraintRight_toLeftOf="@id/iv_speed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/sp_36"
        android:layout_marginRight="@dimen/dp_30"/>
    <ImageView
        android:id="@+id/iv_speed"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintRight_toLeftOf="@id/ll_select"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/sp_36"
        android:layout_marginRight="@dimen/dp_56"/>

    <ImageView
        android:id="@+id/iv_flow"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintLeft_toRightOf="@id/ll_select"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/sp_36"
        android:layout_marginLeft="@dimen/dp_56"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ventilator_air_flow"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white_50"
        app:layout_constraintLeft_toRightOf="@id/iv_flow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/sp_36"
        android:layout_marginLeft="@dimen/dp_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>