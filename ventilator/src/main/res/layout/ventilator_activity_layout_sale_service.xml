<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ventilator_ic_bg"
    tools:context=".ui.activity.SaleServiceActivity">
    <include
        android:id="@+id/ll_title"
        layout="@layout/ventilator_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ventilator_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_sys"
        app:layout_constraintLeft_toLeftOf="@id/tv_sys"
        android:text="@string/ventilator_product_model"
        android:textSize="@dimen/sp_34"
        android:textColor="@color/ventilator_white"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/tv_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_60"
        app:layout_constraintTop_toBottomOf="@id/tv_model"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/ventilator_guideline"
        android:text="@string/ventilator_sys_version"
        android:textSize="@dimen/sp_34"
        android:textColor="@color/ventilator_white"/>


    <TextView
        android:id="@+id/tv_model_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_sys_v"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline"
        android:text=""
        android:textSize="@dimen/sp_34"
        android:textColor="@color/ventilator_white"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/tv_sys_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_40"
        app:layout_constraintTop_toBottomOf="@id/tv_model_v"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline"
        android:text=""
        android:textSize="@dimen/sp_34"
        android:textColor="@color/ventilator_white"/>
    <View
        android:id="@+id/ventilator_guideline2"
        android:layout_width="@dimen/dp_2"
        android:layout_height="@dimen/dp_258"
        android:orientation="vertical"
        android:background="@color/ventilator_white_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/tv_qrcode"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_168"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_wechat"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/tv_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/ventilator_white"
        android:textSize="@dimen/sp_24"
        android:text="官方售后微信"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_qrcode"
        app:layout_constraintBottom_toTopOf="@id/tv_solve"/>
    <TextView
        android:id="@+id/tv_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ventilator_white"
        android:textSize="@dimen/sp_24"
        android:text="扫一扫查看常见问题解决方案"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wechat"
        app:layout_constraintBottom_toTopOf="@id/tv_sale_service"/>
    <TextView
        android:id="@+id/tv_sale_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/ventilator_white"
        android:textSize="@dimen/sp_34"
        android:text="售后热线：95105855"
        app:layout_constraintLeft_toLeftOf="@id/ventilator_guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_solve"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>