<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_6">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ventilator_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.51" />

    <View
        android:id="@+id/view_border"
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ventilator_shape_border_bg"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ventilator_white"
        android:textSize="@dimen/sp_42"
        app:layout_constraintLeft_toLeftOf="@id/view_border"
        app:layout_constraintRight_toRightOf="@id/view_border"
        app:layout_constraintTop_toTopOf="@id/view_border"
        app:layout_constraintBottom_toBottomOf="@id/view_border"/>
</androidx.constraintlayout.widget.ConstraintLayout>