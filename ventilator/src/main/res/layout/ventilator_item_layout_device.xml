<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/dp_10">

    <View
        android:id="@+id/view_board"
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_320"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/ventilator_shape_border_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_online"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_40"
        android:background="@drawable/ventilator_shape_online_bg"
        app:layout_constraintBottom_toBottomOf="@id/tv_online"
        app:layout_constraintTop_toTopOf="@id/tv_online"
        app:layout_constraintLeft_toLeftOf="@id/view_board"/>
    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        app:layout_constraintLeft_toRightOf="@id/view_online"
        app:layout_constraintTop_toTopOf="@id/view_board"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/ventilator_white_50"
        android:text="@string/ventilator_offline"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/view_online"
        app:layout_constraintTop_toBottomOf="@id/view_online"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white"/>
    <TextView
        android:id="@+id/tv_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:textColor="@color/ventilator_white_50"
        android:textSize="@dimen/sp_24"
        app:layout_constraintTop_toTopOf="@id/tv_device_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_device_name"
        app:layout_constraintLeft_toRightOf="@id/tv_device_name"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:background="@color/ventilator_white_20"
        android:layout_marginVertical="@dimen/dp_30"
        app:layout_constraintLeft_toLeftOf="@id/view_board"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintTop_toTopOf="@id/view_board"
        app:layout_constraintBottom_toBottomOf="@id/view_board"/>
    <ImageView
        android:id="@+id/iv_device"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginHorizontal="@dimen/dp_40"
        app:layout_constraintLeft_toLeftOf="@id/view_board"
        app:layout_constraintRight_toRightOf="@id/view_line"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        app:layout_constraintBottom_toBottomOf="@id/view_board"/>
    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_50"
        android:textColor="@color/ventilator_white"
        app:layout_constraintLeft_toLeftOf="@id/view_line"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintTop_toTopOf="@id/view_board"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/ventilator_white"
        android:textSize="@dimen/sp_40"
        app:layout_constraintLeft_toLeftOf="@id/view_line"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintTop_toBottomOf="@id/tv_mode"
        app:layout_constraintBottom_toTopOf="@id/btn_status"/>

    <TextView
        android:id="@+id/btn_status"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_20"
        android:text=""
        android:gravity="center"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/ventilator_white"
        android:background="@drawable/cabinet_shape_button_bg_ok"
        app:layout_constraintLeft_toLeftOf="@id/view_line"
        app:layout_constraintRight_toRightOf="@id/view_board"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/view_board"/>
</androidx.constraintlayout.widget.ConstraintLayout>