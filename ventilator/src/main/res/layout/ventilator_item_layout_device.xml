<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/dp_10">

    <View
        android:id="@+id/view_board"
        android:layout_width="@dimen/dp_600"
        android:layout_height="@dimen/dp_320"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/ventilator_shape_border_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/view_board"
        app:layout_constraintTop_toTopOf="@id/view_board"
        android:layout_marginLeft="@dimen/dp_57"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/ventilator_white_50"
        android:text="@string/ventilator_offline"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tv_online"
        app:layout_constraintTop_toBottomOf="@id/tv_online"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_40"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/ventilator_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>