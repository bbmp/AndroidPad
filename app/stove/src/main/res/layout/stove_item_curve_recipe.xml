<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_recipe"
        android:layout_width="@dimen/dp_286"
        android:layout_height="@dimen/dp_226"
        android:scaleType="centerCrop"
        android:src="@drawable/stove_recipe_img_bg"
        app:common_riv_corner_radius="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_recipe"
        app:layout_constraintVertical_chainStyle="packed"/>
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dp_114"
        android:layout_height="@dimen/dp_114"
        app:layout_constraintLeft_toLeftOf="@id/iv_recipe"
        app:layout_constraintRight_toRightOf="@id/iv_recipe"
        app:layout_constraintTop_toTopOf="@id/iv_recipe"
        app:layout_constraintBottom_toBottomOf="@id/iv_recipe"
        android:visibility="gone"
        android:src="@drawable/stove_add"/>
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginLeft="@dimen/dp_254"
        android:layout_marginBottom="@dimen/dp_194"
        android:visibility="gone"
        android:src="@drawable/stove_shape_delete_selector"
        app:layout_constraintBottom_toBottomOf="@id/iv_recipe"
        app:layout_constraintLeft_toLeftOf="@id/iv_recipe"/>

    <TextView
        android:id="@+id/tv_recipe"
        android:layout_width="@dimen/dp_286"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_38"
        android:paddingHorizontal="@dimen/dp_20"
        android:textColor="@color/stove_white"
        android:textSize="@dimen/sp_36"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/iv_recipe"
        app:layout_constraintTop_toBottomOf="@id/iv_recipe"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>