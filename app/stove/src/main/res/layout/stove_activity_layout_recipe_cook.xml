<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RecipeCookActivity">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/common_ic_bg">

    </pl.droidsonroids.gif.GifImageView>
    <include
        android:id="@+id/ll_title"
        layout="@layout/stove_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_recipe"
        android:layout_width="@dimen/dp_286"
        android:layout_height="@dimen/dp_226"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/pan_guideline5"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:common_riv_corner_radius="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_40"
        android:text=""
        android:textColor="@color/stove_white"
        app:layout_constraintBottom_toBottomOf="@id/iv_recipe"
        app:layout_constraintLeft_toLeftOf="@id/iv_recipe"
        app:layout_constraintRight_toRightOf="@id/iv_recipe"/>
    <TextView
        android:id="@+id/tv_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/stove_white"
        app:layout_constraintLeft_toLeftOf="@id/iv_recipe"
        app:layout_constraintRight_toLeftOf="@id/tv_air"
        app:layout_constraintTop_toBottomOf="@id/iv_recipe"
        tools:text="火力"/>
    <TextView
        android:id="@+id/tv_air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/stove_white"
        app:layout_constraintLeft_toRightOf="@id/tv_fire"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_fire"
        app:layout_constraintRight_toRightOf="@id/iv_recipe"
        tools:text="风量"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stove_step_hint"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/stove_white"
        app:layout_constraintLeft_toLeftOf="@id/iv_recipe"
        app:layout_constraintRight_toRightOf="@id/iv_recipe"
        app:layout_constraintTop_toBottomOf="@id/tv_fire"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_step"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/dp_90"
        android:layout_marginVertical="@dimen/dp_30"
        android:verticalScrollbarPosition="left"
        app:layout_constraintLeft_toLeftOf="@id/pan_guideline5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toBottomOf="parent"/>
<!--    <TextView-->
<!--        android:id="@+id/tv_switch_step"-->
<!--        android:layout_width="@dimen/dp_175"-->
<!--        android:layout_height="@dimen/dp_45"-->
<!--        android:layout_marginLeft="@dimen/dp_110"-->
<!--        android:layout_marginBottom="@dimen/dp_110"-->
<!--        android:background="@drawable/stove_shape_button_bg_cancel"-->
<!--        android:gravity="center"-->
<!--        android:text="@string/stove_switch_step"-->
<!--        android:textColor="@color/stove_white"-->
