<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ModeSelectActivity">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/common_ic_bg">

    </pl.droidsonroids.gif.GifImageView>
    <include
        android:id="@+id/ll_title"
        layout="@layout/stove_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@color/stove_color_foot"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>

    <com.robam.common.ui.view.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toTopOf="@id/ll_foot"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/stove_transparent"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabBackground="@color/stove_transparent"
        app:tabRippleColor="@color/stove_transparent"
        app:layout_constraintLeft_toLeftOf="@id/ll_foot"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot">

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/btn_start"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:textSize="@dimen/sp_30"
        android:gravity="center"
        android:background="@drawable/stove_shape_button_selected"
        android:textColor="@color/stove_white"
        android:layout_marginEnd="@dimen/dp_40"
        android:text="@string/stove_start_working"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="@id/tabLayout"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>