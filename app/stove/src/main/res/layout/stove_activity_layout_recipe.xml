<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stove_ic_bg"
    tools:context=".ui.activity.RecipeActivity">

    <include
        android:id="@+id/ll_title"
        layout="@layout/stove_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ll_search"
        android:layout_width="@dimen/dp_208"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_36"
        android:background="@drawable/stove_shape_button_bg_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_title">
    </View>
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_8"
        android:includeFontPadding="false"
        android:background="@null"
        android:hint="搜索"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        android:textColor="@color/stove_white"
        android:textColorHint="@color/stove_white25"
        android:textSize="@dimen/sp_24"
        app:layout_constraintLeft_toLeftOf="@id/ll_search"
        app:layout_constraintRight_toRightOf="@id/ll_search"
        app:layout_constraintTop_toTopOf="@id/ll_search"
        app:layout_constraintBottom_toBottomOf="@id/ll_search"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_home_search"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="@id/ll_search"
        app:layout_constraintBottom_toBottomOf="@id/ll_search"
        app:layout_constraintRight_toRightOf="@id/ll_search"/>

