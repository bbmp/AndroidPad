<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dp_8"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_step_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        tools:text="迭迭香烤牛排"
        android:textSize="@dimen/sp_42"
        android:textColor="@color/stove_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_step_img"
        app:layout_constraintTop_toTopOf="parent" />
    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_step_img"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_312"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp_80"
        android:src="@drawable/stove_ic_bg"
        app:common_riv_corner_radius="@dimen/dp_55"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>