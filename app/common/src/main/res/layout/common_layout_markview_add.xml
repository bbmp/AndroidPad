<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_triangle"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_76"
        android:background="@drawable/common_shape_triangle"
        app:layout_constraintRight_toRightOf="@id/tv_mark"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_mark"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_30"
        android:gravity="center"
        android:text="标记步骤"
        android:background="@drawable/common_shape_button_mark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_triangle"/>
    <TextView
        android:id="@+id/tv_step"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_20"
        android:background="@drawable/common_shape_step_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>