    <com.youth.banner.Banner
        android:id="@+id/banner_recharge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginVertical="@dimen/dp_55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/pan_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:banner_radius="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_work_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pan_recharge_hint"
        android:textColor="@color/pan_mode"
        android:textSize="@dimen/sp_48"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/pan_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_ok"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/pan_shape_button_bg_ok"
        android:gravity="center"
        android:text="@string/pan_got_it"
        android:textColor="@color/pan_white"
        android:textSize="@dimen/sp_30"
        app:layout_constraintLeft_toLeftOf="@id/pan_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_work_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pan_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.56" />
</androidx.constraintlayout.widget.ConstraintLayout>