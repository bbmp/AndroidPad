<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_step_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="迭迭香烤牛排"
        android:textSize="@dimen/sp_32"
        android:textColor="@color/pan_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.robam.common.ui.view.RoundImageView
        android:id="@+id/iv_step_img"
        android:layout_width="@dimen/dp_168"
        android:layout_height="@dimen/dp_168"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="fitXY"
        android:src="@drawable/pan_ic_bg"
        app:common_riv_corner_radius="@dimen/dp_55"
        app:layout_constraintTop_toBottomOf="@id/tv_step_des"
        app:layout_constraintLeft_toLeftOf="@id/tv_step_des"/>
</androidx.constraintlayout.widget.ConstraintLayout>