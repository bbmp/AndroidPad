<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/steam_ic_bg_xingkong"
    tools:context=".ui.activity.RecipeModeActivityOld">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY">

    </ImageView>


    <View
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@color/steam_color_foot"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.77"
        android:layout_height="match_parent"
        android:layout_width="@dimen/dp_1"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



    <TextView
        android:id="@+id/btn_start"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:textSize="@dimen/sp_30"
        android:gravity="center"
        android:background="@drawable/steam_shape_button_selected"
        android:textColor="@color/steam_white"
        android:layout_marginEnd="@dimen/dp_40"
        android:text="@string/steam_start"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/cook_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:keepScreenOn="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_134"
        android:layout_marginBottom="@dimen/dp_134"
        android:background="@color/steam_chart_multi"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:keepScreenOn="true" />



    <include
        android:layout_marginLeft="@dimen/dp_80"
        app:layout_constraintLeft_toLeftOf="@id/ll_foot"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot"
        layout="@layout/steam_view_layout_tab_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_104"></include>

    <include
        android:id="@+id/ll_title"
        layout="@layout/steam_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>