<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/steam_ic_bg_xingkong"
    tools:context=".ui.activity.RecipeModeActivityOld">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY">

    </ImageView>
    <include
        android:id="@+id/ll_title"
        layout="@layout/steam_view_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ll_foot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104"
        android:background="@color/steam_color_foot"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>
    <com.robam.common.ui.view.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:layout_constraintBottom_toTopOf="@id/ll_foot"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_104"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginRight="@dimen/dp_70"
        android:background="@color/steam_transparent"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabBackground="@color/steam_transparent"
        app:tabRippleColor="@color/steam_transparent"
        app:layout_constraintLeft_toLeftOf="@id/ll_foot"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/ll_foot"
        app:layout_constraintBottom_toBottomOf="@id/ll_foot">

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/btn_start"
        android:layout_width="@dimen/dp_175"
        android:layout_height="@dimen/dp_56"
        android:textSize="@dimen/sp_30"
        android:gravity="center"
        android:background="@drawable/steam_shape_button_selected"
        android:textColor="@color/steam_white"
        android:layout_marginEnd="@dimen/dp_40"
        android:text="@string/steam_start"
        app:layout_constraintTop_toTopOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="@id/tabLayout"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/cook_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:keepScreenOn="true" />

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_134"
        android:layout_marginBottom="@dimen/dp_134"
        android:background="@color/steam_chart_multi"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:keepScreenOn="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.77"
        android:layout_height="@dimen/dp_1"
        android:layout_width="@dimen/dp_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>